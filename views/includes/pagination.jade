ul.pagination
  - var i = 1;
  - var pageCount = getPageCount();
  - while ( i <= pageCount )
    if page == i
      li(class='active')
        a(href=pageURL(i)) #{i}
    else
      li
        a(href=pageURL(i)) #{i}
    - i++;
ul.pager
    li.previous(href="javascript:void(0)", data-bypass="&larr; Older")
    li.next(href="javascript:void(0)", data-bypass="Newer &rarr;")


