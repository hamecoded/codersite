doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1.0")

    title= "Oded Sagir Blog"    
    link(href="/bower_components/bootstrap/dist/css/bootstrap.css", rel="stylesheet")
    //http://bootswatch.com/amelia/
    //link(href="/css/bootstrap_themes/amelia.css", rel="stylesheet")
    link(href="/css/app.css", rel="stylesheet")
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.brand(href='/') A Coder Blog
    .wrap
      .container
        .row
          .span8
            block content
          .span4
            .well.sidebar-nav
              ul.nav.nav-list
                li.nav-header categories
                - each cat in getCategories()
                  li
                    a(href=categoryURL(cat)) #{cat}
                li.nav-header tags
                - each tag in getTags()
                  li
                    a(href=tagURL(tag)) #{tag}
